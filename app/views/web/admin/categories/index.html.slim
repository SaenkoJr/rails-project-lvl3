h2= t('.heading')

= link_to t(:new), new_admin_category_path, class: 'btn btn-primary'

hr

= search_form_for @q, url: admin_categories_path, html: { class: 'row row-cols-4' } do |f|
  = f.input :name_cont, label: t(:name_cont, scope: [:simple_form, :labels, :q, :categories])
  .col-auto.d-flex.mb-3
    .mt-auto
      = f.button :submit, t(:search), class: 'btn btn-outline-secondary me-3'
      = link_to t(:reset), url_for, class: 'btn btn-secondary me-3'

hr

table.table
  thead
    tr
      th= sort_link(@q, 'id')
      th= sort_link(@q, 'name')
      th= sort_link(@q, 'created_at')
      th
  tbody
    - @categories.each do |category|
      tr
        td= link_to category.id, edit_admin_category_path(category)
        td= category.name
        td= l category.created_at
        td= link_to t(:destroy), admin_category_path(category),
                                 method: :delete,
                                 data: { confirm: t(:destory_confirmation) },
                                 class: 'link-danger'
  tfoot
    tr
      td colspan=3
        = paginate @categories

